            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Radio Button tActivity"
            android:onClick="RadioButtontActivity"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Switch Button Activity"
            android:onClick="SwitchButtonActivity"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Toggle Button Activity"
            android:onClick="ToggleButtonActivity"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Rating Bar Activity"
            android:onClick="RatingBarActivity"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Spinner Activitye"
            android:onClick="SpinnerActivity"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Progress Bar Activity"
            android:onClick="ProgressBarActivity"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
