            android:padding="10dp"
            android:text="Android ScrollView Example"
            android:textStyle="bold" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="ScrollView Horizontal Activity"
            android:onClick="ScrollViewHorizontalActivity"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Android Button Activity"
            android:onClick="AndroidButtonActivity"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Image Button Activity"
            android:onClick="ImageButtonActivity"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
