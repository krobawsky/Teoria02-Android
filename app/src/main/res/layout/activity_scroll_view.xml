            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Seek Bar Activity"
            android:onClick="SeekBarActivity"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Simple Dialog Activity"
